# ===========================================
# HR Platform - Environment Variables
# ===========================================
# Copy this file to .env and fill in values
# cp .env.example .env

# ===========================================
# RAILWAY DEPLOYMENT â€” override these values
# ===========================================
# MARIADB_HOST=<railway mysql hostname>
# REDIS_HOST=<railway redis hostname>
# BFF_FRAPPE_URL=http://frappe.railway.internal:8000
# BFF_DATABASE_URL=<railway postgresql url>
# BFF_INTERNAL_URL=http://bff.railway.internal:8080  (set on web service)
# NEXT_PUBLIC_API_URL=/api                           (set on web service)

# --- MariaDB ---
MARIADB_ROOT_PASSWORD=frappe_root_pw
MARIADB_DATABASE=frappe
MARIADB_USER=frappe
MARIADB_PASSWORD=frappe_db_pw

# --- Frappe ---
FRAPPE_SITE_NAME=hr.localhost
FRAPPE_ADMIN_PASSWORD=admin
FRAPPE_DB_HOST=mariadb
FRAPPE_REDIS_CACHE=redis://redis:6379/0
FRAPPE_REDIS_QUEUE=redis://redis:6379/1

# --- BFF ---
BFF_PORT=8080
BFF_FRAPPE_URL=http://frappe:8000
BFF_FRAPPE_API_KEY=
BFF_FRAPPE_API_SECRET=
JWT_SECRET=change-me-to-a-random-string
JWT_EXPIRY_HOURS=24

# --- BFF Database (PostgreSQL) ---
BFF_DB_NAME=bff
BFF_DB_USER=bff
BFF_DB_PASSWORD=bff_secret
BFF_DATABASE_URL=postgres://bff:bff_secret@postgres:5432/bff?sslmode=disable

# --- Frontend ---
NEXT_PUBLIC_API_URL=http://localhost:5009/api

# --- Company Setup ---
DEFAULT_COMPANY_NAME=My Company
DEFAULT_COMPANY_ABBR=MC
DEFAULT_COMPANY_COUNTRY=Thailand

# --- AI ---
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
LLM_PROVIDER=openai
